{% comment %}
  Automated internal link to the Ottoman Beds collections page.
  Uses a variety of natural text and anchor links for better SEO diversity.
{% endcomment %}

{% assign target_collection_handle = 'ottoman-beds' %}
{% assign target_collection_found = false %}

{% for collection in product.collections %}
  {% if collection.handle == target_collection_handle %}
    {% assign target_collection_found = true %}
    {% assign collection_url = collection.url %}
    {% break %}
  {% endif %}
{% endfor %}

{% if target_collection_found %}
  {% comment %} Define our array of different link phrases {% endcomment %}
  {% assign link_options = "
    <p>Looking for stylish storage? Browse our full collection of <a href='[LINK_URL]'>ottoman beds</a>.</p>|
    <p>This product is part of our complete selection of <a href='[LINK_URL]'>ottoman beds</a> with built-in storage.</p>|
    <p>Find the perfect blend of style and function by exploring our <a href='[LINK_URL]'>ottoman bed</a> collection.</p>|
    <p>Compare all of our spacious <a href='[LINK_URL]'>ottoman bed</a> designs in our main collection.</p>" | split: '|' %}

  {% comment %}
    Use a pseudo-random selection based on the product's ID to ensure a different
    option is chosen for each product.
  {% endcomment %}
  {% assign option_index = product.id | modulo: link_options.size %}
  {% assign selected_option = link_options[option_index] %}
  
  {% comment %} Replace the placeholder with the actual URL {% endcomment %}
  <div class="product__collection-link-wrapper">
    {{ selected_option | replace: '[LINK_URL]', collection_url }}
  </div>
{% endif %}
